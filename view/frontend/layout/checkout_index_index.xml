<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/age_configuration.xsd">
    <head>
        <css src="Mollie_Payment::css/styles.css"/>
    </head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="mollie_subscriptions_trial_discount" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Mollie_Subscriptions/js/view/checkout/summary/trial-discount</item>
                                                            <item name="sortOrder" xsi:type="string">100</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Mollie_Subscriptions/checkout/summary/trial-discount</item>
                                                                <item name="title" xsi:type="string" translate="true">Trial Discount</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="before.body.end">
            <block class="Mollie\Payment\Block\Checkout\CheckoutConfig" template="Mollie_Payment::checkout/checkout-config.phtml" />
        </referenceBlock>
    </body>
</page>
