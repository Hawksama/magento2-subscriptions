<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" class="Mollie\Subscriptions\Model\MollieSubscriptionsTransactions">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">mollie_subscriptions_subscriptions_transactions.mollie_subscriptions_subscriptions_transactions_data_source</item>
        </item>
    </argument>
    <settings>
        <deps>
            <dep>mollie_subscriptions_subscriptions_transactions.mollie_subscriptions_subscriptions_transactions_data_source</dep>
        </deps>
        <spinner>mollie_subscriptions_subscriptions_transactions_columns</spinner>
    </settings>
    <dataSource name="mollie_subscriptions_subscriptions_transactions_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <filterUrlParams>
                <param name="customer_id">*</param>
                <param name="subscription_id">*</param>
            </filterUrlParams>
        </settings>
        <aclResource>Mollie_Subscriptions::view_subscriptions</aclResource>
        <dataProvider name="mollie_subscriptions_subscriptions_transactions_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top" template="Mollie_Subscriptions/grid/toolbar">
        <settings>
            <sticky>true</sticky>
        </settings>
        <paging name="listing_paging" component="Mollie_Subscriptions/js/grid/cursor-based-paging"/>
        <columnsControls name="columns_controls"/>
        <bookmark name="bookmarks"/>
        <filters name="listing_filters">
            <filterSelect name="store_id" provider="${ $.parentName }">
                <settings>
                    <options class="Magento\Store\Ui\Component\Listing\Column\Store\Options"/>
                    <caption translate="true">All Store Views</caption>
                    <label translate="true">Store View</label>
                    <dataScope>store_id</dataScope>
                </settings>
            </filterSelect>
        </filters>
    </listingToolbar>
    <columns name="mollie_subscriptions_subscriptions_transactions_columns">
        <column name="id">
            <settings>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="created_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <column name="status">
            <settings>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="amount" class="Magento\Catalog\Ui\Component\Listing\Columns\Price">
            <settings>
                <label translate="true">Amount</label>
            </settings>
        </column>
        <column name="description">
            <settings>
                <label translate="true">Description</label>
            </settings>
        </column>
        <column name="paid_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dateFormat>yyyy-MM-dd</dateFormat>
                <label translate="true">Paid At</label>
            </settings>
        </column>
        <column name="canceled_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dateFormat>yyyy-MM-dd</dateFormat>
                <label translate="true">Canceled At</label>
            </settings>
        </column>
        <column name="expires_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dateFormat>yyyy-MM-dd</dateFormat>
                <label translate="true">Expires At</label>
            </settings>
        </column>
        <column name="failed_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dateFormat>yyyy-MM-dd</dateFormat>
                <label translate="true">Failed At</label>
            </settings>
        </column>
        <column name="due_date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <dateFormat>yyyy-MM-dd</dateFormat>
                <label translate="true">Due Date</label>
            </settings>
        </column>
    </columns>
</listing>
